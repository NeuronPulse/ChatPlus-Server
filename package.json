{
  "name": "chatplus-server",
  "version": "1.0.0",
  "description": "ChatPlus 实时聊天应用服务端",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "build": "echo 'No build step needed for Node.js project'",
    "clean": "node -e \"require('fs').rmSync('temp', { recursive: true, force: true }); require('fs').rmSync('logs', { recursive: true, force: true });\"",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "ChatPlus Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsdoc-to-markdown": "^9.1.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-rsa": "^1.1.1",
    "node-schedule": "^2.1.1",
    "sequelize": "^6.37.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.3",
    "sequelize-cli": "^6.6.3"
  },
  "keywords": [
    "chat",
    "realtime",
    "express",
    "sequelize",
    "sqlite"
  ]
}
